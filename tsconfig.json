{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "utils/*": ["utils/*"],
      "models/*": ["models/*"],
      "components/*": ["components/*"],
      "contextApi/*": ["contextApi/*"],
      "mutations/*": ["mutations/*"],
      "queries/*": ["queries/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/employees/detail"],
  "exclude": ["node_modules"]
}
